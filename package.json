{
  "name": "mcp-server-selfhosted-supabase",
  "version": "1.1.0",
  "description": "Minimal MCP server for self-hosted Supabase with full database control",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-server-selfhosted-supabase": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "start:mcp": "node dist/mcp-http-bridge.js",
    "setup": "./setup.sh",
    "configure": "./configure.sh",
    "test": "vitest",
    "test:unit": "vitest run src",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test tests/e2e",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:diagnostics": "node test-product-performance.ts",
    "fix": "./fix-product-performance.sh",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist node_modules coverage",
    "reinstall": "npm run clean && npm install && npm run build",
    "pretest": "npm run build"
  },
  "keywords": [
    "mcp",
    "supabase",
    "self-hosted"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@supabase/supabase-js": "^2.45.0",
    "postgres": "^3.4.4",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.12",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "typescript": "^5.3.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "supertest": "^6.3.4",
    "vitest": "^1.3.1",
    "@vitest/ui": "^1.3.1"
  }
}